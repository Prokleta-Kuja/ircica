@using System.Reflection
@inject AuthenticationStateProvider _auth

<nav class="navbar navbar-expand-md navbar-dark bg-secondary">
    <div class="container-xxl">
        <a class="navbar-brand me-0" href=@C.Routes.Root>ircica <sup class="text-muted">@_version</sup></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-md-flex justify-content-between" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href=@C.Routes.Search>
                        Search
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href=@C.Routes.Download>
                        Downloads
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    string? _version;
    protected override void OnInitialized()
    {
        _version =
        Assembly.GetExecutingAssembly().GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
    }
}